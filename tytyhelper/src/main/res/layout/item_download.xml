<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="70dp"
	android:gravity="center"
	android:paddingLeft="10dp"
	android:paddingRight="10dp">

	<ImageView
		android:id="@+id/item_download_apk_icon_imgv"
		android:layout_width="70dp"
		android:layout_height="70dp"/>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_weight="1"
		android:gravity="center"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_weight="3"
			android:layout_height="0dp">
			<TextView
				android:id="@+id/item_download_filename"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:textColor="#ee000000"
				android:gravity="center"
				android:layout_height="match_parent"/>
			<TextView
				android:id="@+id/item_download_speed"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:textColor="#ee000000"
				android:gravity="right|center"
				android:layout_height="match_parent"/>
		</LinearLayout>
		<ProgressBar
			style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
			android:id="@+id/item_download_progressbar"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="2"
			android:progress="0"
			android:max="100"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center">
		<Button
			android:id="@+id/item_download_pause"
			android:layout_width="80dp"
			android:text="暂停"
			android:layout_height="50dp"/>
	</LinearLayout>

</LinearLayout>