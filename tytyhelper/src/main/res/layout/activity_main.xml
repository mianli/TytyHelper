<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<include layout="@layout/toolbar_main">
	</include>

	<android.support.v4.widget.DrawerLayout
		android:id="@+id/main_drawlayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<FrameLayout
			android:id="@+id/main_content_frame"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		</FrameLayout>

		<LinearLayout
			android:orientation="vertical"
			android:id="@+id/main_menu_view"
			android:layout_width="200dp"
			android:layout_height="match_parent"
			android:layout_gravity="start|left"
			android:choiceMode="singleChoice"
			android:background="#55adad">

			<TextView
				android:id="@+id/history_item"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_marginTop="2dp"
				android:gravity="center"
				android:textColor="#ffffff"
				android:text="登录历史"
				android:background="@android:color/transparent"
				android:onClick="showHistory"/>

			<TextView
				android:id="@+id/add_user_item"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_marginTop="2dp"
				android:gravity="center"
				android:textColor="#ffffff"
				android:text="登录"
				android:background="@android:color/transparent"
				android:onClick="showAddUser"/>

			<TextView
				android:id="@+id/download_item"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:gravity="center"
				android:textColor="#ffffff"
				android:text="下载"
				android:background="@android:color/transparent"
				android:onClick="showDownload"/>

		</LinearLayout>


	</android.support.v4.widget.DrawerLayout>
</LinearLayout>
